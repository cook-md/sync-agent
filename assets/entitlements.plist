<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Disable App Sandbox to allow system tray and keychain access -->
    <!-- The app runs outside sandbox but with hardened runtime enabled -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Network access for syncing with Cook.md -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for reading and writing recipe files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
